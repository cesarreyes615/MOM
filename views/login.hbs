	<body>
		<div class = "w3-container w3-teal">
			<h2>Login</h2>
		</div>
		{{#if successMessage}}<p>{{successMessage}}</p>{{/if}}
		<form action = "/login/login" class = "w3-container w3-light-grey" method = "post">
			<input type = "email" class = "w3-input w3-border" id = "email" name = "email" placeholder = "Enter Email"/>
			<input type = "password" class = "w3-input w3-border" id = "password" name = "password" placeholder = " Enter Password"/>
			<input type = "submit" class = "w3-button w3-teal" id = "submit" name = "submit"/>
			{{#if viewAlt}}
			<p>Don't have an account? <a href = "../users/signup">Sign Up</a> <a href = "../help/help" class = "" id = "help_button" role = "button"><button class = "w3-button w3-teal w3-xxlarge">Help</button></a>
			</p>
			{{else}}
			<p>Don't have an account? <a href = "../users/signup">Sign Up</a> <a href = "../help/help" class = "" id = "help_button" target="_blank" role = "button"><button class = "w3-button w3-teal">Help</button></a>
			</p>
			{{/if}}
		</form>
		<script src = "../javascripts/AB_Test.js"></script>
	</body>
